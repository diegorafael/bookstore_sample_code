@model BookstoreApiClient.Models.Book
@{
    ViewData["Title"] = "Livro";
}

<div>
    <h2 class="display-4">Cadastro de Livro</h2>
    <hr />

    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Category.Name, "Categoria", new { @class = "control-label" });
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Category.Location" class="control-label"></label>
                <input asp-for="Category.Location" class="form-control" />
                <span asp-validation-for="Category.Location" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="PublishingDate" class="control-label"></label>
                <input asp-for="PublishingDate" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="StockQuantity" class="control-label"></label>
                <input asp-for="StockQuantity" class="form-control" disabled />
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <a asp-action="Index" class="btn btn-sm btn-info">Voltar</a>
        </div>
        <div class="col-md-3">
            <a asp-action="ChangePrice" class="btn btn-sm btn-secondary" asp-route-id="@Model.Id">Alterar Preço</a>
        </div>
        <div class="col-md-3">
            <a asp-action="RegisterSell" class="btn btn-sm btn-secondary" asp-route-id="@Model.Id">Registrar Venda</a>
        </div>
        <div class="col-md-3">
            <a asp-action="RegisterPurchase" class="btn btn-sm btn-secondary" asp-route-id="@Model.Id">Registrar Compra</a>
        </div>
    </div>
</div>
